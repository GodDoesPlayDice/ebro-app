<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_corner_radius">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StyleCardViewGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_screen_placeholder_1" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLeftPart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/ic_settings_display_brightness"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Display brightness"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

            <SeekBar
                android:id="@+id/sbDisplayBrightness"
                android:layout_width="340dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_settings_display_seekbar_bar"
                android:max="90"
                android:paddingStart="32dp"
                android:paddingEnd="48dp"
                android:progress="0"
                android:progressBackgroundTint="@android:color/transparent"
                android:progressTint="@android:color/transparent"
                android:thumb="@drawable/ic_settings_display_seekbar_thumb"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/ic_settings_lights"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/sbDisplayBrightness" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Exterior lights"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="340dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_settings_lights_background"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView3">

                <ToggleButton
                    android:id="@+id/tbLightsOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/settings_lights_toggle"
                    android:checked="false"
                    android:text="ToggleButton"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white"
                    android:textOff="off"
                    android:textOn="off" />

                <ToggleButton
                    android:id="@+id/tbLightsParking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/settings_lights_toggle"
                    android:checked="false"
                    android:text="ToggleButton"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white"
                    android:textOff="parking"
                    android:textOn="parking" />

                <ToggleButton
                    android:id="@+id/tbLightsOn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/settings_lights_toggle"
                    android:text="ToggleButton"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white"
                    android:textOff="on"
                    android:textOn="on" />

                <ToggleButton
                    android:id="@+id/tbLightsAuto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/settings_lights_toggle"
                    android:checked="true"
                    android:text="ToggleButton"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white"
                    android:textOff="auto"
                    android:textOn="auto" />
            </LinearLayout>

            <ToggleButton
                android:id="@+id/toggleButton10"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/settings_button_selector"
                android:checked="false"
                android:text="ToggleButton"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                android:textOff="front fog"
                android:textOn="front fog"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clRightPart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="42dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.5"
                android:scaleY="0.6"
                android:src="@drawable/ic_settings_adjustments"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Adjustments"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="@+id/imageView7" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_settings_mirrors"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_settings_steering_wheel"
                app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView8" />

            <ToggleButton
                android:id="@+id/toggleButton11"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/settings_button_selector"
                android:text="ToggleButton"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                android:textOff="fold mirrors"
                android:textOn="fold mirrors"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>