<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_corner_radius_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginEnd="96dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3"
                    app:srcCompat="@drawable/ic_settings_menu_quick_controls" />

                <TextView
                    android:id="@+id/tv12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/quick_controls"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img6"
                    app:layout_constraintStart_toEndOf="@+id/img6"
                    app:layout_constraintTop_toTopOf="@+id/img6" />

                <ImageView
                    android:id="@+id/img9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    app:layout_constraintEnd_toEndOf="@+id/img6"
                    app:layout_constraintStart_toStartOf="@+id/img6"
                    app:layout_constraintTop_toBottomOf="@+id/img6"
                    app:srcCompat="@drawable/ic_settings_menu_lights" />

                <TextView
                    android:id="@+id/tv13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/lights"
                    android:textColor="@color/default_gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img9"
                    app:layout_constraintStart_toEndOf="@+id/img9"
                    app:layout_constraintTop_toTopOf="@+id/img9" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3"
                    app:srcCompat="@drawable/ic_settings_menu_locks" />

                <TextView
                    android:id="@+id/tv14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/locks"
                    android:textColor="@color/default_gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img34"
                    app:layout_constraintStart_toEndOf="@+id/img34"
                    app:layout_constraintTop_toTopOf="@+id/img34" />

                <ImageView
                    android:id="@+id/img35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    app:layout_constraintEnd_toEndOf="@+id/img34"
                    app:layout_constraintStart_toStartOf="@+id/img34"
                    app:layout_constraintTop_toBottomOf="@+id/img34"
                    app:srcCompat="@drawable/ic_settings_display_brightness"
                    app:tint="@color/default_gray" />

                <TextView
                    android:id="@+id/tv15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/display"
                    android:textColor="@color/default_gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img35"
                    app:layout_constraintStart_toEndOf="@+id/img35"
                    app:layout_constraintTop_toTopOf="@+id/img35" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3"
                    app:srcCompat="@drawable/ic_settings_menu_driving" />

                <TextView
                    android:id="@+id/tv16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/driving"
                    android:textColor="@color/default_gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img36"
                    app:layout_constraintStart_toEndOf="@+id/img36"
                    app:layout_constraintTop_toTopOf="@+id/img36" />

                <ImageView
                    android:id="@+id/img37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    app:layout_constraintEnd_toEndOf="@+id/img36"
                    app:layout_constraintStart_toStartOf="@+id/img36"
                    app:layout_constraintTop_toBottomOf="@+id/img36"
                    app:srcCompat="@drawable/ic_settings_menu_autopilot" />

                <TextView
                    android:id="@+id/tv17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/autopilot"
                    android:textColor="@color/default_gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img37"
                    app:layout_constraintStart_toEndOf="@+id/img37"
                    app:layout_constraintTop_toTopOf="@+id/img37" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3"
                    app:srcCompat="@drawable/ic_settings_menu_safety" />

                <TextView
                    android:id="@+id/tv18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/safety_amp_security"
                    android:textColor="@color/default_gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img38"
                    app:layout_constraintStart_toEndOf="@+id/img38"
                    app:layout_constraintTop_toTopOf="@+id/img38" />

                <ImageView
                    android:id="@+id/img39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    app:layout_constraintEnd_toEndOf="@+id/img38"
                    app:layout_constraintStart_toStartOf="@+id/img38"
                    app:layout_constraintTop_toBottomOf="@+id/img38"
                    app:srcCompat="@drawable/ic_settings_menu_service" />

                <TextView
                    android:id="@+id/tv19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/service"
                    android:textColor="@color/default_gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img39"
                    app:layout_constraintStart_toEndOf="@+id/img39"
                    app:layout_constraintTop_toTopOf="@+id/img39" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton

            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/settings_button_selector"
            android:paddingStart="28dp"
            android:paddingTop="0dp"
            android:paddingEnd="28dp"
            android:paddingBottom="0dp"
            android:text="@string/glovebox"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            android:textSize="12sp"
            app:backgroundTint="@color/background_header"
            app:backgroundTintMode="src_atop"
            app:icon="@drawable/ic_settings_menu_glovebox"
            app:iconSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLeftPart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/ic_settings_display_brightness"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/display_brightness"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/img2"
                app:layout_constraintStart_toEndOf="@+id/img2"
                app:layout_constraintTop_toTopOf="@+id/img2" />

            <SeekBar
                android:id="@+id/sbDisplayBrightness"
                android:layout_width="340dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_settings_display_seekbar_bar"
                android:max="90"
                android:paddingStart="32dp"
                android:paddingEnd="48dp"
                android:progress="0"
                android:progressBackgroundTint="@android:color/transparent"
                android:progressTint="@android:color/transparent"
                android:thumb="@drawable/ic_settings_display_seekbar_thumb"
                app:layout_constraintStart_toStartOf="@+id/img2"
                app:layout_constraintTop_toBottomOf="@+id/img2" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/ic_settings_lights"
                app:layout_constraintStart_toStartOf="@+id/img2"
                app:layout_constraintTop_toBottomOf="@+id/sbDisplayBrightness" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/exterior_lights"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/img3"
                app:layout_constraintStart_toEndOf="@+id/img3"
                app:layout_constraintTop_toTopOf="@+id/img3" />

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="340dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_settings_lights_background"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/img2"
                app:layout_constraintTop_toBottomOf="@+id/img3">

                <ToggleButton
                    android:id="@+id/tbLightsOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/settings_lights_toggle"
                    android:checked="false"
                    android:text="@string/togglebutton"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white"
                    android:textOff="@string/off"
                    android:textOn="@string/off" />

                <ToggleButton
                    android:id="@+id/tbLightsParking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/settings_lights_toggle"
                    android:checked="false"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white"
                    android:textOff="@string/parking"
                    android:textOn="@string/parking" />

                <ToggleButton
                    android:id="@+id/tbLightsOn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/settings_lights_toggle"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white"
                    android:textOff="@string/on"
                    android:textOn="@string/on" />

                <ToggleButton
                    android:id="@+id/tbLightsAuto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/settings_lights_toggle"
                    android:checked="true"
                    android:textAllCaps="false"
                    android:textColor="@color/text_white"
                    android:textOff="@string/_auto"
                    android:textOn="@string/_auto" />
            </LinearLayout>

            <ToggleButton
                android:id="@+id/toggleButton10"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/settings_button_selector"
                android:checked="false"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                android:textOff="@string/front_fog"
                android:textOn="@string/front_fog"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/img2"
                app:layout_constraintTop_toBottomOf="@+id/ll4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clRightPart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="42dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.5"
                android:scaleY="0.6"
                android:src="@drawable/ic_settings_adjustments"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/adjustments"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/img7"
                app:layout_constraintStart_toEndOf="@+id/img7"
                app:layout_constraintTop_toTopOf="@+id/img7" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_settings_mirrors"
                app:layout_constraintStart_toStartOf="@+id/img7"
                app:layout_constraintTop_toBottomOf="@+id/img7" />

            <ImageView
                android:id="@+id/img14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_settings_steering_wheel"
                app:layout_constraintBottom_toBottomOf="@+id/img8"
                app:layout_constraintStart_toEndOf="@+id/img8"
                app:layout_constraintTop_toTopOf="@+id/img8" />

            <ToggleButton
                android:id="@+id/toggleButton11"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/settings_button_selector"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                android:textOff="@string/fold_mirrors"
                android:textOn="@string/fold_mirrors"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/img7"
                app:layout_constraintTop_toBottomOf="@+id/img8" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>