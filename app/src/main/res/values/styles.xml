<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_text_lower_toolbar">
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetBottom">58dp</item>
        <item name="rippleColor">@null</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Theme.EbroApp.NoActionBarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="style_card_view">
        <item name="cardBackgroundColor">#222222</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="contentPaddingLeft">30dp</item>
        <item name="contentPaddingRight">30dp</item>
        <item name="contentPaddingTop">20dp</item>
        <item name="contentPaddingBottom">20dp</item>
    </style>
</resources>