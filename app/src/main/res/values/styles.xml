<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTextLowerToolbar">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetBottom">58dp</item>
        <item name="rippleColor">@null</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="PlayPauseButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@null</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="FavoriteButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@null</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="backgroundTintMode">src_over</item>
    </style>

    <style name="Theme.EbroApp.NoActionBarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="StyleCardView">
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="contentPaddingLeft">30dp</item>
        <item name="contentPaddingRight">30dp</item>
        <item name="contentPaddingTop">20dp</item>
        <item name="contentPaddingBottom">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleCardViewGray">
        <item name="cardBackgroundColor">@color/background_header</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="contentPaddingLeft">30dp</item>
        <item name="contentPaddingRight">30dp</item>
        <item name="contentPaddingTop">20dp</item>
        <item name="contentPaddingBottom">20dp</item>
    </style>

    <style name="TemperatureSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">#4F4E4E</item>
        <!--        <item name="android:progressDrawable">@drawable/abc_seekbar_track_material</item>-->
        <!--        <item name="android:indeterminateDrawable">@drawable/abc_seekbar_track_material</item>-->
        <item name="android:thumb">@drawable/ic_temperature_sk_thumb</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerSize">30dp</item>
    </style>

    <style name="RoundedSongImageView" parent="">
        <item name="cornerSize">10dp</item>
    </style>
</resources>